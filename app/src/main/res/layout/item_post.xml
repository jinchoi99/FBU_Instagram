<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/ivProfile"
        android:text="jinjin99"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/ivProfile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ibtnHeart"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="sample description sample description sample description sample description "
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/ibtnHeart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/ivImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:backgroundTint="@color/backgroundcolor"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ufi_heart" />

    <ImageButton
        android:id="@+id/ibtnComment"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/ivImage"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ibtnHeart"
        android:backgroundTint="@color/backgroundcolor"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageButton
        android:id="@+id/ibtnShare"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/ivImage"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="-2dp"
        android:layout_toEndOf="@+id/ibtnComment"
        android:backgroundTint="@color/backgroundcolor"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ufi_new_direct" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="8dp"
        android:text="11h" />


</RelativeLayout>